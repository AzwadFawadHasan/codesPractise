{
    "version": "2.0.0",
    "command": "node",
    "shellProperty": true,
    "args": [
        "--harmony"
    ],

    "tasks": [
        {
            "label": "runFile",
            "isTestCommand": true,
            "suppressTaskName": true,
            "presentation":{
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$jshint",
            "args": ["${file}"]
        }
    ]
}